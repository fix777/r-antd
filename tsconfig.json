{
  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "declaration": true,
    "target": "es2015",
    "lib": ["dom", "es2016", "es2017", "es2017.object"]
  },
  "include": ["./components/**/*"],
  "exclude": ["node_modules", "lib", "es"]
}
